{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build benchmark (ucrt64 clang++)",
            "type": "process",
            "command": "C:\\msys64\\ucrt64\\bin\\clang++.exe",
            "args": [
                "-std=c++11",
                "-D_WIN32_WINNT=0x0601",
                "-IFranks_websocket",
                "-IFranks_websocket/asio",
                "-IFranks_websocket/websocketpp",
                "11314389_Xu_Task5_Benchmark.cpp",
                "-o",
                "build/Debug/benchmark_clang.exe",
                "-lws2_32",
                "-lmswsock"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\clang++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I.",
                "-lws2_32",
                "-lmswsock",
                "-D_WIN32_WINNT=0x0601"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}
